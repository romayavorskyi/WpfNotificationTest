<Window x:Class="NotificationTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotificationTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Instant Notification"
            Width="150" Height="100" Click="InstantNotification" Margin="10"></Button>
    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Deferred Notification"
                Width="150" Height="100" Click="DeferredNotification" Margin="10"></Button>
    </StackPanel>
</Window>
